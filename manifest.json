{
  "manifest_version": 2,
  "name": "Video Speed Controller",
  "version": "1.0",
  "description": "Control video playback speed with customizable keyboard shortcuts",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
